---
interface Props {
  name: string;
  title: string;
  bio: string;
  image: string;
  delay?: number;
}

const { name, title, bio, image, delay = 0 } = Astro.props;
---

<div 
  class="animate-on-scroll bg-white/5 rounded-2xl overflow-hidden group border border-white/10 hover:border-ted-red/50 transition-all duration-500"
  style={`transition-delay: ${delay}ms;`}
>
  <div class="relative aspect-square overflow-hidden">
    <img 
      src={image} 
      alt={name} 
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 grayscale group-hover:grayscale-0"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
    <div class="absolute bottom-4 left-4 right-4 translate-y-2 group-hover:translate-y-0 transition-transform duration-500">
        <h3 class="text-xl font-bold text-white mb-1">{name}</h3>
        <p class="text-ted-red text-sm font-medium uppercase tracking-wider">{title}</p>
    </div>
  </div>
  <div class="p-6">
    <p class="text-gray-400 text-sm leading-relaxed line-clamp-3 group-hover:line-clamp-none transition-all duration-500">
      {bio}
    </p>
  </div>
</div>
