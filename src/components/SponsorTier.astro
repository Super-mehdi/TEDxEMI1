---
interface Props {
  tier: string;
  count: number;
}

const { tier, count } = Astro.props;
---

<div class="mb-16 last:mb-0">
  <h3 class="text-center text-gray-500 uppercase tracking-[0.2em] text-sm mb-10">{tier} Sponsors</h3>
  <div class="flex flex-wrap justify-center gap-8 md:gap-12">
    {Array.from({ length: count }).map((_, i) => (
      <div 
        class="w-32 h-20 md:w-48 md:h-28 bg-white/5 border border-white/10 rounded-xl flex items-center justify-center grayscale hover:grayscale-0 hover:border-ted-red/30 hover:bg-white/10 transition-all duration-300 animate-on-scroll"
        style={`transition-delay: ${i * 100}ms;`}
      >
        <span class="text-xs text-gray-600 font-bold uppercase">{tier} {i + 1}</span>
      </div>
    ))}
  </div>
</div>
